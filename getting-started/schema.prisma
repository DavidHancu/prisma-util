generator client {
    provider = "prisma-client-js"
    engineType = "binary"
    previewFeatures = ["clientExtensions"]
}

datasource db {
    provider = "sqlite"
    url = "file:../../sql.db"
}

model User {
    id Int @id @default(autoincrement())
    email String @unique
    name String?
    posts Post[]
}

model Post {
    id Int @id @default(autoincrement())
    title String
    content String?
    published Boolean @default(false)
    author User @relation(fields: [authorId], references: [id])
    authorId Int
}